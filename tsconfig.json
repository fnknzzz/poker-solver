{
  "compilerOptions": {
    "outDir": "./dist",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": ["esnext"],
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "configFile": "./tslint.json",
        "disableNoUnusedVariableRule": true
      }
    ]
  },
  "include": ["./src/**.ts", "src/**/**.ts"]
}
